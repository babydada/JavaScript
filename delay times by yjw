<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<style>
		div{
			float: left;
			margin: 10px;
		}
		#thePicture{
			width: 100px;
			height: 100px;
			border-radius: 50px;
			background-color: #f00; 
		}
		#introduce{
			width: 328px;
			height: 209px;
			text-align: center;
			display: none;
			background-color: #00f;
		}
	</style>
	<script>
		window.onload=function(){
			//访问thePicture和introduce
			var byDivFirst=document.getElementById('thePicture');
			var byDivSecond=document.getElementById('introduce');
			//定一个为空的变量
			var timer=null;
			//onmouseover鼠标移到目标上
			byDivSecond.onmouseover=byDivFirst.onmouseover=function(){
				//关闭timer定时器
				clearTimeout(timer);
				// 属性设置元素如何显示
				byDivSecond.style.display='block';
			}
			//onmouseout鼠标移开时
			byDivSecond.onmouseout=byDivFirst.onmouseout=function()
				{
				//开启一个定时器，400ms执行这个函数，只执行一次。
				timer=setTimeout(function()
				{
					byDivSecond.style.display='none';
				},400);
			}
		}
	</script>
</head>
<body>
	<div id="thePicture"></div>
	<div id="introduce"></div>
</body>
</html>
